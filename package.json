{
  "name": "@clusterws/server",
  "version": "4.0.0-alpha.8",
  "description": "ClusterWS - lightweight, fast and powerful framework for building scalable Node.js WebSocket applications.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "author": "Dmitrii Goriunov",
  "scripts": {
    "test": "nyc mocha './src/**/*.test.ts' --exit",
    "build": "rimraf ./dist && npm run lint && tsc && npm run copy",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "copy": "cpx ./src/index.d.ts ./dist"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ClusterWS/ClusterWS"
  },
  "dependencies": {
    "@clusterws/cws": "^0.15.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.9.4",
    "chai": "^4.1.2",
    "cpx": "^1.5.0",
    "mocha": "^5.2.0",
    "nyc": "^13.3.0",
    "rimraf": "^3.0.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.6.3",
    "ws": "^7.1.2"
  },
  "nyc": {
    "all": true,
    "temp-directory": "./node_modules/.cache/nyc_output",
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/index.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html"
    ]
  }
}
